{
  "name": "pigpen-koa",
  "version": "0.0.1",
  "description": "pigpen-koa",
  "private": true,
  "main": "app.js",
  "scripts": {
    "app": "node ./app",
    "build": "npm run webpack -- --display-error-details --mode=production --optimize-minimize",
    "dev": "npm run webpack -- --debug --devtool sourcemap --mode=development --output-pathinfo --watch",
    "release": "npm run shell -- --release && npm run build",
    "restart": "touch ./tmp/restart.txt",
    "service": "docker-compose up -d",
    "service:down": "docker-compose down",
    "service:down:all": "docker-compose down --rmi local -v",
    "service:logs": "docker-compose logs -f",
    "service:rebuild": "docker-compose up --build -d && docker system prune --volumes -f",
    "service:recreate": "docker-compose up --force-recreate -d",
    "service:restart": "docker-compose restart",
    "service:stop": "docker-compose stop",
    "test": "mocha",
    "start": "npm run dev",
    "webpack": "webpack --colors --progress",
    "shell": "node ./shell.js",
    "init": "npm run shell -- --init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiek881028/pigpen-koa.git"
  },
  "keywords": [
    "koa",
    "app",
    "template"
  ],
  "author": "xiek <285985285@qq.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xiek881028/pigpen-koa/issues"
  },
  "homepage": "https://github.com/xiek881028/pigpen-koa#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "cuid": "^2.1.4",
    "email-templates": "^5.0.0",
    "fs-extra": "^7.0.0",
    "jsonwebtoken": "^8.3.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-mailer-v2": "^0.0.3",
    "koa-multer": "^1.0.2",
    "koa-pug": "^3.0.0-2",
    "koa-router": "^7.3.0",
    "koa-static": "^4.0.2",
    "log4js": "^3.0.2",
    "mongoose": "^5.2.13",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "mongoose-gridfs": "^0.5.0",
    "mongoose-validator": "^2.1.0",
    "node-sass": "^4.9.2",
    "redis": "^2.8.0",
    "uuid": "^3.3.2",
    "validator": "^10.7.1",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "autoprefixer": "^9.0.1",
    "babel-loader": "^8.0.0",
    "babel-plugin-import": "^1.8.0",
    "core-js": "^3.6.4",
    "css-loader": "^3.4.2",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.0.2",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.1",
    "mocha": "^5.2.0",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "postcss-loader": "^2.1.6",
    "pug-loader": "^2.4.0",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^8.0.2",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^4.0.0",
    "vue": "^2.5.17",
    "vue-loader": "^15.9.1",
    "vue-router": "^3.1.6",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.11",
